<div id="<%= dom_id post %>">
  <div class="card-header" style="text-align: center; text-size: big; font-size: 1.875em; font-weight: bold; margin-top: 10px;">
    <%= post.title %>
  </div>
  <div class="card-body">
    <h6 class="card-subtitle mb-2 text-muted">
      posted by <%= link_to post.user.full_name, user_path(post.user) %> 
      <%=pluralize(post.views,"view") %>
    </h6>
    <p class="card-text"><%= post.body %></p>

  </div>
</div>



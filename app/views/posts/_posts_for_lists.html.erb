<div class="card-header" style="text-align: center; text-size: big; font-size: 1.875em; font-weight: bold; font-family: Montserrat Regular;">
  <%= post.title %>
</div>
<div class="card-body">
  <h6 class="card-subtitle mb-2 text-muted" style="margin-left: 20px;">
    posted by <%= link_to post.user.full_name, user_path(post.user) %> 
    <%=pluralize(post.views,"view") %>
  </h6>
  <p class="card-text"><%= post.body.to_plain_text.truncate_words(100) %></p>
  <p>
    <%= button_to t(:show_this_post), post, :method => "get", class: "btn btn-outline-primary" %>
  </p>
</div>
<div class="container" >
  <%= form_with(model: post) do |form| %>
    <% if post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div >
      <%= form.text_field :title, placeholder: "Title", class: "form-control text-center"%>
    </div>
    <div>
      <div  style="text-align: center; margin: 10px">
      <%if !post.premium?%>
        <%= form.label :premium, style: "display: block" %>
        <%= form.check_box :premium %>
      <% end %>

        <%= form.label :category, style: "display: block" %>
        <%= form.select :category_id, options_for_select(Category.all.order(name: :asc)
            .collect { |cat| [cat.name, cat.id] }) %>
      </div>
      <div >
        <%= form.rich_text_area :body, placeholder: "Start Your Post Here" %>
      </div>
      <div style="text-align: center; margin: 10px" >
        <%= form.submit class: "btn btn-outline-primary " %>
      </div>
    </div>
  <% end %>
</div>
<div class="container">
  <h1 class="text-center">Administrator</h1>
  <%= render "admin/nav_links" %>
  <div class="text-center mt-5">
    <div class="btn-group">

      <%if @user.role == 'admin' %>
        <%= link_to "remove_admin", user_role_user_path(:admin, @user), data: { turbo_method: :post }, class: "btn btn-success btn-block btn-lg gradient-custom-4 text-body" %>
      <%else current_user.admin? %>
        <%= link_to "set Admin", user_role_admin_path(:admin, @user), data: { turbo_method: :post }, class: "btn btn-success btn-block btn-lg gradient-custom-4 text-body" %>
      <%end%>
      <%= link_to "Destroy", admin_destroy_user_path(@user), :onclick => "return confirm('Are you sure you want to delete this user?')", method: :delete, class: "btn btn-outline-danger" %>
      <%= link_to "back_to_posts", admin_users_path, class: "btn btn-success btn-block btn-lg gradient-custom-4 text-body" %>
    </div>
  </div>
  <div class="row mt-1">
    <p>
      <strong>User Name:</strong> <%= @user.full_name %>
    </p>
  </div>
  <div class="row mt-1">
    <p>
      <strong>Views:</strong> <%= @user.views %>
    </p>
  </div>
  <div class="row mt-1">
    <p><strong>Emale:</strong>
      <%= "#{@user.email}" %>
    </p>
  </div>
    <div class="row mt-1">
    <strong>Post Title:</strong>
    <% if @user.posts.empty?%>
      <strong><%= "No Posts yet" %></strong>
    <%else%>
      <% @user.posts.each do |post| %>
        <div class="row mt-1">
          <%= post.title %>
        </div> 
      <%end%>
    <%end%>
  </div>
</div>

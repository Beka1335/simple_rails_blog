<div class="container">
  <h1 class="text-center">Adminstrator</h1>
  <%= render 'admin/nav_links' %>
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">User</th>
        <th scope="col">Emale</th>
        <th scope="col">Status</th>
        <th scope="col">Role</th>
      </tr>
    </thead>
    <tbody>
      <% @use.each do |u| %>
        <tr>
          <th scope="row"><%= u.id %></th>
          <td><%= link_to u.full_name, admin_user_path(u) %></td>
          <td><%= u.email %></td>
          <td>
            <% if u.confirmed_at %>
              <%= "Confirmed" %>
            <% else %> 
              <%= "Not Confirmed" %>
            <% end %>
          </td>
          <td><%= u.role %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container">
  <h1 class="text-center">Adminstrator</h1>
  <%= render 'admin/nav_links' %>
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th><%= sort_link(@t, :title,"Title") %></th>
        <th><%= sort_link(@query, :user_first_name, "Users")%></th>
        <th scope="col">Comments</th>
        <th><%= sort_link(@t, :approve, "Status")%></th>
        <th scope="col">Premium</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <th scope="row"><%= post.id %></th>
          <td><%= link_to post.title.truncate(15), admin_post_path(post) %></td>
          <td><%= post.user.full_name %></td>
          <td><%= pluralize(post.comments.size, "Comment") %></td>
          <td><%= post.approve %></td>
          <td><%= post.premium %></td>
        </tr>
      <% end %>
      <%= will_paginate @posts, list_classes: %w(pagination justify-content-end) %>
    </tbody>
  </table>
</div>

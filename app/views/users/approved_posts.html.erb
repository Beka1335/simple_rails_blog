<div class="container mt-5">  
  <div class="row">
    <div class="col-4">
          <%if @user.avatar_url.nil?%>
            <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
          <% else %>
            <%= image_tag @user.avatar_url,style:"width:150px; height: 150px; border-radius:100%"  %>
          <% end %>  
    </div>
    <div class="col-8">
      <h1><%= @user.full_name %></h1>
      <h6>
        <%= pluralize(@user.comments.size, "Comment") %> | 
        <%= pluralize(@user.views, "view") %> | 
        <%= pluralize(@total_views, "Total Post View") %>
      </h6>
    </div>
  </div>
  <div class="row">
    <div class="col-1">
    </div>
    <div class="col-10" style="margin-bottom: 10px;">
      <% @posts.each do |post| %>
        <div class="card mt-3">
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post %></h5>
            <p class="card-text"><%= "#{time_ago_in_words(post.created_at)} ago" %></p>
            <p class="card-text"><%= post.body.to_plain_text.truncate_words(100) %></p>
          </div>
        </div>
      <% end %>
      <div class="col-1"></div>
    </div>
  </div>
</div>

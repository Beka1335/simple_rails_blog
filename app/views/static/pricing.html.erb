<div class="container py-5 h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-lg-8 col-xl-6">
      <div class="card rounded-3" style="border-width: 0px">
        <img
          src="https://source.unsplash.com/random/800x400" style="border-radius: 15px"
        />
      </div>
      <h1 class="font-black text-3xl mb-2"  style="text-align:center;">Subscribe for access</h1>
      <p class="text-lg text-gray-700 mb-3"  style="text-align:center;">
        You'll get never before seen content, an extra article per week, and access
        to our private community.
      </p>
      <div class="grid grid-cols-2 gap-6"  style="text-align:center;">
        <% if user_signed_in? && !current_user.subscribed? %>
          <%= form_tag purchase_checkouts_path, method: :post, data: { turbo: false } do %>
            <input type="hidden" name="price_id" value="<%= Rails.application.credentials.dig(:stripe, :pricing, :monthly)%>" />
            <input type="submit" value="Subscribe for $9/mo" class="btn btn-outline-primary" />
          <% end %>

          <%= form_tag purchase_checkouts_path, method: :post, data: { turbo: false } do %>
            <input type="hidden" name="price_id" value="<%= Rails.application.credentials.dig(:stripe, :pricing, :yearly)%>" />
            <input type="submit" value="Subscribe for $90/yr" class="btn btn-outline-primary" />
          <% end %>
        <% elsif user_signed_in? && current_user.subscribed? %>
          <div class="bg-yellow-100 p-6 rounded-lg text-center text-yellow-900 col-span-2">
            <p>You are already subscribed.</p>
            <%= button_to "Manage your subscription", billings_path, data: { turbo: false }, class: "btn btn-outline-primary" %>
          </div>
        <% else %>
          <%= link_to "Subscribe for $9/mo", new_user_session_path, class:"btn btn-outline-primary" %>

          <%= link_to "Subscribe for $90/yr", new_user_session_path, class:"btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
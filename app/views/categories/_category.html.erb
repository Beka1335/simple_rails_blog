<div id="<%= dom_id category %>">
  <h2 class="text-center">
    <% target = action_name.eql?("show") ? categories_path : category %>
    <%= link_to category.name.capitalize, target%>
  </h2>
  <% category.posts.includes(:user, :rich_text_body).each do |post| %>
    <%= render 'posts/posts_for_lists', post: post %>
  <% end %>

  <div class="pagination justify-content-center">
    <%= will_paginate @categories, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>